.status
    min-width 120px
    display inline-flex
    align-items center
    justify-content center
    border-radius 12px
    border 1px solid var(--tc_border)
    font-size 0.6rem
    text-transform uppercase
    padding 5px 10px
    color var(--tc_text_caption)
    span + .icon
        padding-left 5px
    .icon + span
        padding-left 5px

    .icon
        font-size 0.7rem
    &_error
        border 1px solid var(--tc_status_error)
        color #fff
        background-color var(--tc_status_error)
    &_warning
        border 1px solid var(--tc_status_warning)
        color #fff
        background-color var(--tc_status_warning)
    &_success
        border 1px solid var(--tc_status_success)
        color #fff
        background-color var(--tc_status_success)
    &_inprogress
        border 1px solid var(--tc_status_inprogress)
        color #fff
        background-color var(--tc_status_inprogress)
    &_wait
        border 1px solid var(--tc_status_wait)
        color #fff
        background-color var(--tc_status_wait)