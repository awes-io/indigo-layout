body, input, button, textarea
  font-family fontfamily
  font-size 14px

.icn-dot
  box-shadow 1px 2px 5px rgba(0, 0, 0, 0.3)
  size 6px
  absolute right -3px top -3px
  border-radius 50%
  display block
  &_static
    display inline-block
    position static
    right auto
    top auto
    vertical-align middle

.icon
  line-height 1 !important

.novatar
  size 36px 
  border-radius 50%
  fl(,c,c)
  display flex !important
  text-align center
  display flex !important
  font-size 17px
  &_box
    border-radius 0

.shadow-overflow
  background-color rgba(0,0,0,0.2)
  fixed top 0 left 0
  size 100%
  z-index 9
  display none
  opacity 0
  
textarea
  &::-webkit-scrollbar-track
    border-radius 10px
  &::-webkit-scrollbar
    border-radius 10px
    width 7px
  &::-webkit-scrollbar-thumb
    border-radius 10px

.flex-list
  fl(w,sb)
  margin-left -10px
  margin-right -10px
  margin-bottom 5px
  li
    padding-left 10px
    padding-right 10px
    margin-bottom 20px
    display block
  & &__caption
    font-size f_small 
    display block
  & &__title
    display block
    font-size f_medium 
    font-weight 400

.text-pt
  line-height 1.57
  font-size f_normal
  margin-bottom 25px

.blue-link
  &:hover
    text-decoration underline

.upper-link
  text-transform uppercase
  font-size f_smart
  font-weight 700


.infbl
  text-align center
  margin-left auto
  margin-right auto
  & &_icon
    font-size 46px
    display block
    margin-bottom 25px
  & &__caption
    display block
    font-size f_middle
    margin-bottom 15px
  & &__title  
    font-size 100px
    display block
    font-weight 300
    margin 0
    line-height 1
    margin-bottom 3px
  & &__type
    font-size 60px
    font-weight 300
    display block
    margin 0
    line-height 1


@media maw[mmd]
  .flex-list
    li
      width 50%

  .infbl
    text-align center
    & &_icon
      font-size 46px
      margin-bottom 15px
    & &__caption
      margin-bottom 10px
    & &__title  
      font-size 70px
    & &__type
      font-size 40px

.slide-up-down
    overflow: hidden

.head-context
  display inline-block
  position relative
  margin-left 15px
  margin-top 2px
  & &__main
    white-space: nowrap
    border 2px solid
    border-radius 5px
    font-size f_middle
    padding 5px 20px 5px 10px
    font-weight 700
    position relative
    z-index 3
    &:after
      angle()
      right 10px
  & &__hidden
    absolute left 0 
    top calc(100% - 5px)
    padding-top 5px
    padding-bottom 5px
    border 2px solid
    border-top 0
    border-radius 5px
    min-width 100%
    display none
    z-index 10
    &.active
      display block
    &-btn
      padding 5px 10px
      font-size f_medium
      display block
      width 100%
      text-align left
    li.active
      display none
  &.active
    & ^[0]__hidden
      border-radius 0 0 5px 5px


// Scroll Bar

::-webkit-scrollbar-button
  background-image url('')
  background-repeat no-repeat
  size 0px

::-webkit-scrollbar-thumb
  background-image  url('data:image/png;base64,')
  background-position center 
  background-repeat no-repeat 
  cursor pointer
  border-radius 10px

::-webkit-resizer 
  background-image url('')
  background-repeat no-repeat
  size 7px 0px

::-webkit-scrollbar
  size 10px


.float-icns
  fixed right 40px bottom 40px
  width 50px
  z-index 5
  & &__icon
    size 50px
    border-radius 50%
    margin-top 15px
    font-size 25px

.awes-status
  size 9px
  border-radius 50%
  display block


.loading
  &-block
    position relative
    *
      pointer-events none
    &:before
      size 100%
      pointer-events auto !important
      display block
      absolute left 0 top 0
      opacity 0.75
      z-index 6
      content ''
    &:after
      padding 0 32px 0 52px
      box-shadow 3px 4px 20px rgba(0, 0, 0, 0.2)
      border-radius 15px
      height 30px
      background-color rgba(0,0,0,0.4)
      fl(,c,c)
      color #fff
      line-height 1
      text-align center
      z-index 7
      white-space nowrap
      max-width 200px
      overflow hidden
      text-overflow ellipsis
      absolute left 50% top 10%
      transform translateX(-50%)
      bg('loading.svg', left 30px center)
      content attr(data-loading)
  &-inline
    cursor default
    @extend .loading-block
    text-indent -9999px
    &:before
      opacity 0.4
    &:after
      text-indent 0
      box-shadow none
      border-radius 0
      padding 0 0 0 20px
      background none
      height 100%
      absolute left 50% top 0
      bg('loading.svg', left center)
  &-show
    position relative
    &:after
      padding 0 32px 0 52px
      box-shadow 3px 4px 20px rgba(0, 0, 0, 0.2)
      border-radius 15px
      height 30px
      background-color rgba(0,0,0,0.4)
      fl(,c,c)
      color #fff
      line-height 1
      text-align center
      z-index 7
      absolute left 50% bottom -15px
      transform translateX(-50%)
      bg('loading.svg', left 30px center)
      content attr(data-loading)

.int-table__loader
    display none

@media maw[tsm]
  .float-icns
    bottom 80px
    right 20px
