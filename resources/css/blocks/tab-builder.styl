@media res_mobile--lg
    .tab-nav
        &__togglers
            flex-wrap wrap
        &__overflow
            height 1px
            width 100%
            overflow hidden
        &__toggler
            width 100%
            margin-right 0
            flex-shrink 0
        &__hidden-toggler
            margin-left 0
            width 100%
            display block
            .context-menu__toggler
                width 100%
                padding-top 17px
                padding-bottom 17px
                color var(--tc_link_semi_active)
                &:after
                    border-top-color var(--tc_link_semi_active)
            .context-menu__dropdown
                box-shadow none
                position static
                left 0
                top 0
                background-color transparent
            .cm-item__button, .cm-item__link
                background-color transparent
                padding-left 0
                padding-right 0
                padding-bottom 12px
                padding-top 12px
            .context-menu__list
                box-shadow: none
                background-color transparent
                padding-bottom 10px

// transition classes
.tab-transition

    &-enter-active,
    &-leave-active
        transition: opacity 200ms ease

    &-leave-to,
    &-enter
        opacity: 0

    &-enter-active
        transition-delay: 100ms

    &-leave-active
        position: absolute
        top: 0
        left: 0
        right 0