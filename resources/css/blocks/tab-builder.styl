.tab-builder
    margin-bottom 25px

.tab-switcher
    position: relative // for transition
    overflow: hidden

    &__tab
        margin-top 25px
        

.tab-nav
    fl()
    position relative
    box-shadow inset 0 -1px 0px 0px var(--tc_border)
    .context-menu
        &.is-opened
            z-index 5
    &__overflow
        fl()
        width 100%
        overflow hidden
        flex-grow 1
    &__toggler
        padding 17px 25px 17px 0
        display block
        font-size 14px
        color var(--tc_link_semi)
        white-space: nowrap
        position relative
        &:before
            size 0px 2px
            background-color var(--tc_link_semi_active)
            display block
            opacity 0
            absolute left 0 bottom 0
            tr(0.25)
            content ''
        &:hover
            color var(--tc_link_semi_active)
            text-decoration none
        &.is-active
            pointer-events: none
            color var(--tc_link_semi_active)
            &:before
                width calc(100% - 25px)
                opacity 1
    &__hidden-toggler
        position: absolute
        bottom: 0
        flex-shrink 0
        .context-menu__toggler
            white-space nowrap
            padding 16px 0
            display block
            font-size 14px
            border-bottom 2px solid transparent
            color var(--tc_link_semi)
            white-space: nowrap
            position relative
            padding-right 12px
            &:after
                angle()
                margin-top 0px
                tr(0.25)
            &:hover
                color var(--tc_link_semi_active)
                &:after
                    border-top-color var(--tc_link_semi_active)
        &.has-active-item
            &:after
                content: ''
                display: block
                absolute left 0 bottom 15px
                right: 12px
                height: 1px
                background-image: linear-gradient(to right, var(--tc_link_semi_active) 50%, transparent 50%)
                background-size: .5rem 1px
                background-repeat: repeat-x



