.action-menu
    position relative
    width 34px
    & &__click
        font-size 3px
        text-align center
        padding 10px
    .overflow-window
        display none
        absolute right 0 top 100%
        margin-top 10px
        opacity 1
    &.active
        .overflow-window
            display block


@media res_desktop--sm
    .actions-overflow
        opacity 1
        pointer-events auto
