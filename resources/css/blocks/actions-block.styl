.actions-overflow
    display block
    size 30px
    absolute right 0 top 0
    font-size f_normal
    opacity 0
    pointer-events none
    & &__icon
        size 30px
        tr(0.3)
        z-index 500
        position relative
        cursor pointer
        line-height 3px
        fl(,c,c)
        font-size 3px
    & &__actions
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.1)
        padding 5px
        absolute right 0 top 100%
        display none
        padding-top 20px
        z-index 600
        padding-bottom 20px
    & &__link
        display block
        padding 5px 25px
        &_red
            margin-top 7px
    & &__title
        display block
        padding 5px 25px
        margin-bottom 7px
    &.active
        opacity 1 !important
        pointer-events: auto
        & ^[0]__actions
            display block


