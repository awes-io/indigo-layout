    & &__add
        font-size: f_small
        display: inline-block
        margin-top -5px
        margin-left 20px
        cursor pointer
        margin-bottom 10px
        vertical-align bottom
        background-color transparent
        color var(--tc_link)
        &:hover, &:focus
            text-decoration underline
            color var(--tc_link_dark)
        &-block
            font-size f_smart
            text-transform uppercase
            font-weight 700
            margin-bottom 20px
            margin-left 5px
            display inline-block
            cursor pointer
            vertical-align bottom
            &:hover, &:focus
                text-decoration underline
