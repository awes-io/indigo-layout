.fb-reservation
    display flex
    max-width max-content
    flex-wrap wrap
    background-color var(--tc_ui_bg)
    border-radius var(--tc_form_border_radius)
    tr(0.25, border-color)
    border 1px solid var(--tc_border_ins)
    position relative
    
    &:focus,
    &:focus-within
        border 1px solid var(--tc_ui_focus)
    
    &.has-error
        border 1px solid cl_warn
    

    &__error
        width 100%
        height 0
        

    &__calendar
        max-width 100%


    &__title
        width 100%
    
        
    &__time
        display flex
        flex-direction column
        width calendar_width
        position relative
    

    &__loading
        border-radius var(--tc_form_border_radius)
        background var(--tc_ui_shadow-middle)
        padding 10px
        display flex
        justify-content center
        align-items center

        position absolute
        top 0
        left 0
        width 100%
        height 100%


    @media miw[tsm]
            
        &__hide-time,
        &__caption-year
            display none

    
    @media maw[tsm]
    
        &__calendar,
        &__time
            
            &:not(.is-visible)
                display none


