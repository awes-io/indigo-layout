        --tc_shadow_gblue 5px 9px 20px alpha(cl_greyblue, 0.1)
        --tc_shadow_block 0 0 30px rgba(0, 0, 0, 0.15)
        --tc_shadow_blur 0 0 20px rgba(0, 42, 87, 0.2)
        --tc_shadow_smr 0 0 10px rgba(0,0,0,0.15)
        --tc_shadow_st alpha(cl_black, 0.25)

        --tc_theme_body cl_black

        // Scroll
        --tc_scroll_thumb darken(cl_asphalt, 15%)
        --tc_scroll_thumb_active cl_asphalt

        --tc_code_bg alpha(cl_rdred, 0.1)
        --tc_code_text lighten(cl_rdred, 50%)

        --tc_aside_shadow 0 20px 30px rgba(0,0,0,0.25)
