@import "../_init.styl"
@import "../_setting.styl"

html, body
    background-color: cl_white
    color: cl_black

p
    margin-top 0
    margin-bottom 10px

::-webkit-scrollbar-button
    background-color cl_cloud 

::-webkit-scrollbar-track
    background-color cl_cloud 

::-webkit-scrollbar-corner
    background-color cl_red

::-webkit-scrollbar
    background-color: cl_cloud 

::-webkit-resizer
    background-color cl_asphalt

::-webkit-scrollbar-thumb
    background-color cl_lgr

::-webkit-scrollbar-thumb:hover
    background-color cl_asphalt

html[data-dark="true"]

    &, & body
        background-color: cl_wall
        color: cl_white
    
    ::-webkit-scrollbar-button
        background-color cl_greyrc

    ::-webkit-scrollbar-track
        background-color cl_greyrc

    ::-webkit-scrollbar-corner
        background-color cl_greyrc

    ::-webkit-scrollbar
        background-color: cl_greyrc


::-webkit-scrollbar-button
    background-image url('')
    background-repeat no-repeat
    size 0px


::-webkit-scrollbar-thumb
    background-image  url('data:image/png;base64,')
    background-position center 
    background-repeat no-repeat 
    cursor pointer
    border-radius 10px

::-webkit-resizer 
    background-image url('')
    background-repeat no-repeat
    size 7px 0px

::-webkit-scrollbar
    size 10px

