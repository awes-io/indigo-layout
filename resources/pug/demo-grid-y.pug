                        .cell-auto(style="width:70px")
                            img(src="https://picsum.photos/60/60", alt="")
                    .grid
                        .cell-auto
                            a(href="") vuejs
                            a(href="") php
                            a(href="") laravel
                        .cell-auto
                            a.icon.icon-star(href="")
                        .cell-auto
                            p <b>52k</b> downloads
                            p updated: <b>12.03.2018</b>
                        .cell-auto
                            p 15$

                