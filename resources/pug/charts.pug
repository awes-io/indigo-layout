extends includes/layout

block pageVariables
    - var pageTitle = "Charts example"

block modules
    script(src="https://cdn.pkgkit.com/5cd207e2c94eb723c3307764a5693def/awes-io/tab-builder/v1.x.x/js/main.js")
    script(src="https://cdn.pkgkit.com/5cd207e2c94eb723c3307764a5693def/awes-io/charts/v1.x.x/js/main.js")

block pageContent
    filter-builder(label="Chart 1" :param="{chart: 0}")
    filter-builder(label="Chart 2" :param="{chart: 1}")
    filter-builder(label="Chart 3" :param="{chart: 2}")
    content-wrapper(store-data="charts" :default="[{datasets:[{data:[170,180,73,175],backgroundColor:'#45a4dc',borderColor:'#2883f0'}],labels:[1,2,3,4]}, {datasets:[{data:[150,130,73,74],backgroundColor:'#45a4dc',borderColor:'#2883f0'}],labels:[1,2,3,4]}, {datasets:[{data:[200,90,100,260],backgroundColor:'#45a4dc',borderColor:'#2883f0'}],labels:[1,2,3,4]}]")
        template(slot-scope="chartData")
            chart-builder(style="width:600px; height:400px" :data="chartData[$get($route, 'query.chart', 0)]", :options="{elements:{line:{tension:0},point:{radius:0}},legend:{display:false},scales:{xAxes:[{display:false}],yAxes:[{display:false,ticks:{beginAtZero:true}}]}}")