block pageVariables
doctype html
html(lang="en")
    head
        title= pageTitle
        include frames/metahead
        script(src="https://storage.awes.io/680a7d07f89b94e7fc83be657a2daa27/awes-io/theme-switcher/v0.0.2/js/main.js")
        block pageHead
        script(src="/js/main.js")
        script(src="https://storage.awes.io/680a7d07f89b94e7fc83be657a2daa27/awes-io/base-js/v1.x.x/js/main.js")
    body
        div(class="mainwrapper" id="awes-app")
            div(class="frame")
                transition(enter-active-class="animated fadeIn" leave-active-class="animated fadeOut")
                    .frame__overlay(v-show="$awesLayoutCrm.togglenav || $awesLayoutCrm.showUserMenu" @click="$awesLayoutCrm.overlayClick")
                include frames/aside
                div(class="frame__right")
                    .frame__header
                        .frame__header-top
                            form.frame__search#search(v-bind:class="{ active: $awesLayoutCrm.showSearch }" action="js" method="get")
                                span.frame__search-link(v-on:click="$awesLayoutCrm.showSearch = !$awesLayoutCrm.showSearch")
                                    i.icon.icon-search
                                .frame__search-hidden
                                    input.frame__search-input(type="text" placeholder="Search...")
                                    button.frame__search-btn(type="submit") Search
                                    span.frame__search-close(v-on:click="$awesLayoutCrm.showSearch = !$awesLayoutCrm.showSearch")
                                    i.icon.icon-cross
                            .frame__userinfo
                                a.frame__userinfo-link(href="")
                                    span.icon.icon-ruppor
                                        i.icn-dot
                                span.frame__header-add
                                    i.icon.icon-plus
                                a.frame__userinfo-link(href="")
                                    span.icon.icon-hdd
                                        i.icn-dot
                        .frame__header-line
                            h1.frame__header-title= pageTitle

                    transition(name="user-menu")
                        .user-menu(v-show="$awesLayoutCrm.showUserMenu" style="display: none;")
                            include frames/user-menu
                    div.frame__content
                        button.frame__header-add
                            i.icon.icon-plus
                        block pageContent
                            p Content Block