.frame__aside#aside
    .frame__aside-wrap
        .frame__aside-line
            span.frame__aside-open.g-res--tablet-lg( :class="{ active: $awesLayoutCrm.togglenav }" @click="$awesLayoutCrm.openNav")
                span
            h2.frame__aside-title
                a(href="") AwesCRM
            if(headLinks)
                a.btn.frame__aside-callbtn(href="") Sign In
        nav.frame__aside-nav(v-bind:class="{ active: $awesLayoutCrm.togglenav }")
            .frame__aside-mhead.g-res--tablet-lg
                a.frame__aside-close(href="" @click.prevent="$awesLayoutCrm.openNav()")
                    i.icon.icon-cross
                h4.frame__aside-mtitle
                    a(href="") AwesCRM
            frame-nav(:links="[{name:'Dashboard', icon:'speed', link: '/'}, {name:'Phones', icon:'call', link: '/', children: [{name: 'Managers', link: '/'}, {name: 'Suppliers', link: '/'}, {name: 'Clients', link: '/'}]},{name:'Update', icon:'loading', link: '/'}, {name:'Admin', icon:'report', children: [{name:'Options', link: '/'}, {name:'Permissions', link: '/'}]}]")
                div.ph
                    div.ph__mnav
                        span.ph__mnav-link
                        span.ph__mnav-title
                    ul.ph__nav
                        - for (var x = 0; x < 5; x++)
                            li
                                span.ph__nav-icon
                                span.ph__nav-text
                if(headLinks)
                    template(slot="difnav")
                        ul.frame__aside-mnav
                            li
                                a.frame__aside-link(href="") Link 1
                            li
                                a.frame__aside-link(href="") Link 1
                            li.frame__aside-link
                                .theme-switcher
                                    .theme-switcher__switcher
                                        input.theme-switcher__input(type='range', min='0', max='1')
                                    .theme-switcher__label Theme Dark
