        fb-multi-block(name="multi1")
            template(slot-scope="mb")
                fb-group
                    fb-input(name="input22" label="multi-block" :id="mb.id" cell="2")
                    fb-input(name="input33" label="multi-block" :id="mb.id" cell="2")
                fb-textarea(name="text11" label="multi block")
        br
        br
        h4 Multiblock disabled
        fb-multi-block(name="multi2" disabled)
            template(slot-scope="mb")
                fb-input(name="input" label="multi-block" :id="mb.id")


