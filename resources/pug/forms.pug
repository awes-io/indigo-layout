            fb-switcher.fb-switcher_error(label="switcher" name="switcher3" cell="2") 
            fb-switcher.fb-switcher_ok(label="switcher" name="switcher4" cell="2")

        br
        br

        h4 Select
        fb-group
            fb-select(name="select1" cell="2" label="Yosip ishchet lojku" :multiple="false" :select-options="[{name:'one', value: 1}, {name:'two', value: 2}]")
            fb-select(name="select2" cell="2" label="Yosip ishchet lojku" :multiple="true" :select-options="[{name:'one', value: 1}, {name:'two', value: 2}]")
            fb-select(name="select3" class="fb-select_ok" disabled cell="2" label="Yosip ishchet lojku" :multiple="false" :select-options="[{name:'one', value: 1}, {name:'two', value: 2}]")
