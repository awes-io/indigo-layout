        br
        br
        h4 Phone input
        fb-group
            fb-phone(name="phone1" disabled label="Phone label" cell="2")
            fb-phone(name="phone2" label="Phone label" cell="2")
            fb-phone(name="phone3" class="fb-phone_ok" label="Phone ok" cell="2")
            fb-phone(name="phone4" class="fb-phone_error" label="Phone error" cell="2")

        br
        br
        h4 MCE Editor
        fb-editor(name="editor1")    
        fb-editor(name="editor2" disabled)   
        fb-group
            fb-editor(name="editor3" cell="2" class="fb-editor_ok")    
            fb-editor(name="editor4" cell="2" class="fb-editor_error")  

        br
        br
        h4 Textarea
        fb-group
            fb-textarea(name="ed1" cell="2" label="Textarea label")                    
            fb-textarea(name="ed2" cell="2" label="Textarea disabled" disabled)
            fb-textarea(name="ed3" cell="2" label="Textarea error" class="fb-textarea_error")                    
            fb-textarea(name="ed4" cell="2" label="Textarea ok" class="fb-textarea_ok")

        br
        br
        h4 Uploader
        fb-uploader(name="files1" url="http://httpbin.org/post" format="docx" size="15")
        fb-uploader(name="files2" url="http://httpbin.org/post" format="docx" size="15" disabled)
        fb-uploader(name="files3" url="http://httpbin.org/post" class="fb-uploader_ok" format="docx" size="15")
        fb-uploader(name="files4" url="http://httpbin.org/post" class="fb-uploader_error" format="docx" size="15")

        br
        br
        h4 Range Slider
        fb-group
            fb-slider(name="range1" label="Lorem ipsum dolor sit amet consectetur, adipisicing elit. Fugiat iure perspiciatis corporis nesciunt inventore, eius quos maiores sit, ipsa neque quas harum maxime. Sunt a nobis excepturi accusamus assumenda necessitatibus?" cell="2")
            fb-slider(name="range2" label="Disabled" cell="2" disabled)
            fb-slider(name="range3" label="Slider error" class="fb-slider_error" cell="2")
            fb-slider(name="range4" label="Slider Ok" class="fb-slider_ok" cell="2")

        br
        br
        h4 Input example
        fb-group
            fb-input(name="input1" label="Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolore id minima facilis voluptate vitae magnam rem beatae corporis, explicabo eveniet molestias quibusdam accusantium voluptatum accusamus eius officiis! Amet, fugiat ad?" cell="2" disabled)
            fb-input(name="input2" label="Default label" cell="2")
            fb-input(name="input3" class="fb-input_ok" label="Input ok" cell="2")
            fb-input(name="input4" class="fb-input_error" label="Input error"  cell="2")
        
        br
        br
        h4 Checkbox example
        fb-group
            fb-checkbox(name="checkbox1" cell="2" label="default checkbox")
            fb-checkbox(name="checkbox2" cell="2" label="disabled checkbox" disabled)
            fb-checkbox.fb-checkbox_ok(name="checkbox3" cell="2" label="checkbox ok")
            fb-checkbox.fb-checkbox_error(name="checkbox4" cell="2" label="checkbox error")

        br
        br
        h4 Code example
        fb-group
            fb-code(name="code1")
            fb-code(disabled name="code2")
            fb-code.fb-keycode_ok(name="code3")
            fb-code.fb-keycode_error(name="code4")

        br
        br
        h4 Company Slug
        fb-group
