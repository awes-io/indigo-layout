// Style
.frame
    fl()
    min-height 100vh

    &__aside
        background var(--nav-background)
        width $frame-aside-width
        min-height 100vh
        color var(--nav-color)
        flex-shrink 0
        z-index $frame-aside-z-index
        position relative

    &__aside-nav,
    &__aside-nav ul
        margin: 0
        padding: 0

    &__nav-item
        position: relative

        a, 
        button
            fl(w,,c)
            width: 100%
            color inherit
            opacity .4
            transition opacity $base-transition
            padding $frame-nav-item-padding

            &:hover,
            &:focus
                text-decoration: none
                color: inherit
                opacity: 1

        > a,
        > button
            min-height $frame-nav-item-height

        ul > li > a
            padding-left: $xlarge-gap

        &.has-submenu
            
            button
                padding-right: $xlarge-gap

            &:before
                content: ''
                display: block
                border-bottom: 1px solid currentColor
                border-left: 1px solid currentColor
                width: .5em
                height: .5em
                absolute right 25px top 30px
                transform: translate(50%, -50%) rotate(-45deg)
                transition: transform $base-transition
            
            &.is-opened
                &:before
                    transform: translate(50%, -50%) rotate(-225deg)


    &__aside-top
        fl(w,c,c)
        text-align: center
        padding: $base-gap
        background-color: rgba(0,0,0,0.3)
        min-height: $frame-header-height
        font-size: $h1-font-size
        font-weight: $h1-font-weight

    &__right
        background: var(--ui-background-secondary)
        width: 100%
        // width "calc(100% - %s)" % $frame-aside-width
        position relative


    &__header
        background: var(--ui-background)
        min-height $frame-header-height
        position relative


    &__content
        padding: $frame-content-padding
