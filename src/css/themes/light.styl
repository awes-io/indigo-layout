@import "../_variables.styl"

// Цвета темы
tc_color_main = cl_violet
tc_color_semi = cl_yellow

// Типография
tc_link = cl_sky
tc_link_dark = cl_skydark

tc_link_black = cl_black
tc_link_black_active = tc_color_main

tc_link_semi = cl_asphalt
tc_link_semi_active = cl_black

tc_text = cl_black
tc_invert = cl_white
tc_text_caption = cl_asphalt

// Формы, кнопки, выпадающие списки, фильтры, пагинация ...
tc_border = cl_cloud
tc_border_light = cl_cleanpike
tc_border_dark = cl_darkday
tc_border_gain = cl_gain
tc_border_ins = cl_insgrey
tc_border_prj = cl_prjgrey
tc_border_active = cl_black
tc_border_night = cl_asphalt

tc_ui_bg = cl_white
tc_ui_bg_semi = cl_gain
tc_ui_bg_darken = cl_spacegrey
tc_ui_empty = cl_emp
tc_ui_darkbg = cl_asphalt

tc_ui_focus = cl_sky

tc_ui_hover = tc_color_main
tc_ui_hover_text = cl_white

tc_ui_btn_light = cl_evensnow
tc_ui_btn_light_text = cl_black

tc_ui_btn_smcolor = tc_color_semi
tc_ui_btn_smcolor_text = cl_white

tc_ui_disabled = cl_gain

tc_ui_tag = tc_link_dark
tc_ui_tag_text = cl_white

tc_btn_bg = cl_grass
tc_btn_text = cl_white

tc_btn_tr_bg = cl_white
tc_btn_tr_text = cl_asphalt

tc_ui_shadow = 0 0 5px rgba(0, 0, 0, 0.1)
tc_ui_shadow-overflow = alpha(cl_black, 0.8)


// Контекстное меню
tc_ui_context_menu_shadow = 0 20px 30px rgba(0,0,0,.1)
tc_ui_context_menu_shadow_top = 0 -5px 30px rgba(0,0,0,.1)
tc_ui_context_menu_bg = cl_white
tc_ui_context_menu_border = cl_darkday
tc_ui_context_menu_hover_bg = cl_gain

// Уведомления
tc_tooltip_bg = rgba(0,0,0,0.9)
tc_tooltip_text = cl_white


// Фрейм, шапка, сайдбар
tc_aside_bg = tc_color_main
tc_aside_bg_dark = rgba(0,0,0,0.3)
tc_aside_bg_nav = rgba(0,0,0,0.15)
tc_aside_gradient = linear-gradient(to bottom, tc_aside_bg 0%, spin(tc_aside_bg, 25deg) 100%)
tc_aside_gradient_header = linear-gradient(to right, tc_aside_bg 0%, spin(tc_aside_bg, 25deg) 100%)
tc_aside_link = cl_white
tc_aside_text = cl_white

tc_page_bg = cl_gain
tc_header_bg = cl_white
tc_header_iconlink = cl_pink
tc_header_iconlink_active = cl_white

tc_header_link = cl_emp
tc_header_link_active = cl_black


tc_ui_bgopacity = rgba(0,0,0,0.8)

// Another Gradients 
tc_gradient_1 = linear-gradient(to right, #6ea5e8 0%, #7793e6 50%, #7d84e6 100%)
tc_gradient_2 = linear-gradient(to right, #f69f8c 0%, #f07f76 50%, #eb6563 100%)


// Shadows
tc_shadow_blue = 5px 9px 20px alpha(cl_skymid, 0.3)
tc_shadow_red = 5px 9px 20px alpha(cl_red, 0.3)
tc_shadow_gblue = 5px 9px 20px alpha(cl_greyblue, 0.1)


tc_theme_body = cl_wall

