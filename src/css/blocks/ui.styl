.ui-filter
    display block
    margin-bottom 20px
    & &__inline
        fl(w)
        margin-bottom 15px
    & &__wrap
        fl(w)
        margin-left -5px
        margin-right -5px
    & &__incell
        display block
        margin-right 80px
        margin-bottom 10px
        &:last-child
            margin-right 0
        span
            display block
            font-size: f_smart
            margin-bottom 3px
        b
            display block
            font-size: f_medium
    & &__cell
        padding-left 5px
        padding-right 5px
        width 100%
        &_3
            width 33.333%
        &_2
            width 50%

.ui-title
    display block
    font-weight: 700
    margin-bottom 25px
    font-size f_middle

.ui-btns
    margin-top 20px
    .btn
        display inline-block
        margin-right 15px
        margin-bottom 10px
        &:last-child
            margin-right 0


@media res_tablet--sm
    .ui-filter
        & &__cell
            &_3
                width 100%

@media res_mobile--lg
    .ui-filter
        & &__cell
            &_2
                width 100%

@media res_mobile--md
    .ui-filter
        & &__incell
            width 100%
            margin-right 0