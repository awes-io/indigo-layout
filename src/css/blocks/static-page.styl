.static-page
    min-height 100vh
    & &__wrap
        wrap(860px)
        width 100%
    & &__head
        padding 45px 0 180px 0
        & ^[0]__wrap
            fl(w,,c)
            max-width 840px
    & &__title
        margin-bottom 10px
        margin-right 40px
        font-weight 600
    & &__search-link
        margin-bottom 10px
        display block
        font-size 18px
    & &__content
        margin-top -140px
        display block
        position relative
        padding 15px
    & &__footer
        padding 20px 0
        fl(,c,)
        &-logo
            fl(,c,c)
            font-size f_small
            .icon
                font-size 25px
                display block
                margin-right 10px
            a
                text-decoration underline
    & &__cell
        min-height calc(100vh - 220px)
        fl(,,c)
        width 100%

@media res_tablet--md
    .static-page
        & &__head
            padding-top 25px
            padding-bottom 155px 
        & &__cell
            min-height calc(100vh - 180px)
            