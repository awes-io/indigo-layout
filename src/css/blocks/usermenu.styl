.usermenu
    display: none // prevent content jump

    &.context-menu
        display: block // prevent content jump



    .context-menu

        &__toggler
            display block
            size 36px
            position relative
            overflow: hidden

            @media res_tablet--lg-i
                size 50px

            &:after
                content ''
                background-image linear-gradient(to top, rgba(0,0,0,0.1) 0%, rgba(0,0,0,0.1) 50%, rgba(255,255,255,0) 100%)
                absolute left 0 top 0
                width: 100%
                height: 200%
                display block
                z-index 100
                transition: transform 150ms ease

            img,
            .icon-user
                size 100%
                z-index 1
                font-size 20px
                absolute left 0 top 0
                display block

            &:hover,
            &:active
                &:after
                    transform: translateY(-50%);


        &__dropdown
            min-width: 300px


        @media res_tablet--lg
            &__list
                min-height: 100vh

            // Slide animation
            &__dropdown.toggle-context-menu

                &-enter,
                &-leave-to
                    opacity: 0
                    transform: translateX(50px)

    &.is-opened
        .context-menu__toggler:after
            transform: translateY(-50%); // how to move it?

    &__title
        font-size: 18px
        margin-bottom: 0

    &__desc
        display: block
        line-height: 1.5em
        margin-top: .5em

    &__progress
        margin: 16px 0 -17px

        progress
            margin-left: -30px
            margin-right: -30px

    &__nav
        margin-top: 1em

        ul
            display: flex
            margin-left: -15px
            margin-top: -10px

        li
            padding-left: 15px
            margin-top: 10px

            &.is-expand
                flex-grow: 1
                text-align: right

    &__theme-checkbox .checkbox
        margin-bottom: 0
        padding-bottom: 0

    &__companies

        &-list

            li
                line-height: 1.5
                margin-top: 1rem
                padding-left: 18px
                position: relative

                &:before
                    content: 'â€”'
                    display: block
                    position: absolute
                    left: 0
                    top: 0

                a
                    color: inherit

                    &:hover
                        text-decoration: underline

        &-btn
            margin-top: 12px
